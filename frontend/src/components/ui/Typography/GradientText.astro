---
/**
 * GradientText Component
 * Holographic gradient text effect
 * Use this to highlight key words/phrases with the signature Pokemon TCG shimmer
 */

interface Props {
  /**
   * HTML tag to render
   * @default 'span'
   */
  as?: 'span' | 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p';

  /**
   * Whether to animate the gradient
   * @default true
   */
  animated?: boolean;

  /**
   * Additional CSS classes
   */
  class?: string;
}

const {
  as: Tag = 'span',
  animated = true,
  class: className = '',
} = Astro.props;
---

<Tag
  class:list={[
    'gradient-text',
    {
      'gradient-text--animated': animated,
    },
    className,
  ]}
>
  <slot />
</Tag>

<style>
  .gradient-text {
    background: var(--gradient-holographic);
    background-size: 200% 200%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    display: inline-block;
  }

  .gradient-text--animated {
    animation: holographic-shimmer 3s ease-in-out infinite;
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .gradient-text--animated {
      animation: none;
      background-position: 50% 50%;
    }
  }
</style>
