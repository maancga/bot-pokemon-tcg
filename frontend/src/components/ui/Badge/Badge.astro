---
/**
 * Badge Component
 * Small status or label indicator
 */

interface Props {
  /**
   * Visual variant
   * @default 'default'
   */
  variant?: 'default' | 'success' | 'warning' | 'error' | 'info' | 'holographic';

  /**
   * Size variant
   * @default 'md'
   */
  size?: 'sm' | 'md' | 'lg';

  /**
   * Additional CSS classes
   */
  class?: string;
}

const {
  variant = 'default',
  size = 'md',
  class: className = '',
} = Astro.props;
---

<span
  class:list={[
    'badge',
    `badge--${variant}`,
    `badge--${size}`,
    className,
  ]}
>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-body);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-badge);
    white-space: nowrap;
    transition: all var(--transition-fast);
  }

  /* Size variants */
  .badge--sm {
    padding: var(--space-1) var(--space-3);
    font-size: var(--font-size-xs);
  }

  .badge--md {
    padding: var(--space-2) var(--space-4);
    font-size: var(--font-size-sm);
  }

  .badge--lg {
    padding: var(--space-3) var(--space-5);
    font-size: var(--font-size-base);
  }

  /* Color variants */
  .badge--default {
    background-color: var(--color-bg-elevated);
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border-subtle);
  }

  .badge--success {
    background-color: hsla(120, 60%, 50%, 0.15);
    color: var(--color-grass-light);
    border: 1px solid var(--color-grass);
  }

  .badge--warning {
    background-color: hsla(55, 95%, 65%, 0.15);
    color: var(--color-electric-light);
    border: 1px solid var(--color-electric);
  }

  .badge--error {
    background-color: hsla(10, 90%, 55%, 0.15);
    color: var(--color-fire-light);
    border: 1px solid var(--color-fire);
  }

  .badge--info {
    background-color: hsla(210, 85%, 60%, 0.15);
    color: var(--color-water-light);
    border: 1px solid var(--color-water);
  }

  .badge--holographic {
    background: var(--gradient-holographic);
    background-size: 200% 200%;
    color: var(--color-bg-base);
    font-weight: var(--font-weight-bold);
    border: none;
    animation: holographic-shimmer 3s ease-in-out infinite;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .badge--holographic {
      animation: none;
      background-position: 50% 50%;
    }
  }
</style>
